#include <iostream>
using namespace std;
int main() {
	int n, d;
	cin >> n >> d;
	int *a = new int[n];
	for (int i = 0; i < n; i++) {
		cin >> a[i];
	}
	int count = 2;
	for (int i = 0; i < n - 1; ++i) {
		int newCities = a[i + 1] - a[i] - 2 * d + 1;
		if (newCities <= 0)
			newCities = 0;
		else if (newCities >= 2)
			newCities = 2;
 
		count += newCities;
	}
	cout << count << endl;
	return 0;
}
